datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

model User {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  email  String  @unique
  avatar String?

  createdAt DateTime @default(now())
}
